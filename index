    <script>
        // MQTTÈÖçÁΩÆ
        const MQTT_CONFIG = {
            host: 'wss://lca0944f.ala.cn-hangzhou.emqxsl.cn:8084/mqtt',
            topicSensor: '/public/esp32/smart_home',
            topicAlert: '/public/esp32/smart_home/alert',
            options: {
                clientId: 'esp32-smart-home-web-' + Math.random().toString(16).substr(2, 8),
                username: 'ESP32_Binkle',
                password: '1234',
                clean: true,
                reconnectPeriod: 5000
            }
        };

        // Áä∂ÊÄÅÂèòÈáè
        let mqttClient = null;
        let messageCount = 0;
        let chart = null;
        let startTime = Date.now();
        let alertCount = 0;

        // ÂàùÂßãÂåñÂõæË°®
        function initChart() {
            const ctx = document.getElementById('temperatureChart').getContext('2d');
            chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Temperature (¬∞C)',
                        data: [],
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102, 126, 234, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        y: {
                            beginAtZero: false,
                            title: {
                                display: true,
                                text: 'Temperature (¬∞C)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Time'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        }
                    }
                }
            });
        }

        // Êõ¥Êñ∞Áä∂ÊÄÅÊòæÁ§∫
        function updateStatus(status, text) {
            const statusDot = document.getElementById('mqttStatus');
            const statusText = document.getElementById('mqttStatusText');
            
            statusDot.className = 'status-dot ' + status;
            statusText.textContent = text;
        }

        // Ê∑ªÂä†Êó•Âøó
        function addLog(message, type = 'info') {
            const logContainer = document.getElementById('logContainer');
            const logEntry = document.createElement('div');
            logEntry.className = 'log-entry ' + type;
            const timestamp = new Date().toLocaleTimeString();
            logEntry.textContent = `[${timestamp}] ${message}`;
            logContainer.insertBefore(logEntry, logContainer.firstChild);
            
            while (logContainer.children.length > 50) {
                logContainer.removeChild(logContainer.lastChild);
            }
        }

        // Ê∑ªÂä†Êä•Ë≠¶‰ø°ÊÅØ
        function addAlert(alertType, message) {
            const alertSection = document.getElementById('alertSection');
            const alertList = document.getElementById('alertList');
            
            alertSection.style.display = 'block';
            alertCount++;
            
            const alertItem = document.createElement('div');
            alertItem.className = 'alert-item';
            const timestamp = new Date().toLocaleString();
            alertItem.innerHTML = `
                <div class="alert-time">[${timestamp}] ${alertType}</div>
                <div class="alert-message">${message}</div>
            `;
            alertList.insertBefore(alertItem, alertList.firstChild);
            
            // ÈôêÂà∂Êä•Ë≠¶Êï∞Èáè
            while (alertList.children.length > 20) {
                alertList.removeChild(alertList.lastChild);
            }
            
            // ÊµèËßàÂô®ÈÄöÁü•
            if (Notification.permission === 'granted') {
                new Notification('Êô∫ËÉΩÂ±ÖÂÆ∂Á≥ªÁªüÊä•Ë≠¶', {
                    body: message,
                    icon: 'üîî'
                });
            }
        }

        // Êõ¥Êñ∞‰º†ÊÑüÂô®Êï∞ÊçÆÊòæÁ§∫
        function updateSensorData(data) {
            // Êõ¥Êñ∞Ê∏©Â∫¶
            document.getElementById('temperature').textContent = data.temperature ? data.temperature.toFixed(1) : '--';
            
            // Êõ¥Êñ∞LEDÁä∂ÊÄÅ
            const ledStatus = data.led_status === 'ON';
            document.getElementById('ledStatus').textContent = ledStatus ? 'ON' : 'OFF';
            document.getElementById('ledStatusBadge').textContent = ledStatus ? 'ON' : 'OFF';
            document.getElementById('ledStatusBadge').className = 'sensor-status ' + (ledStatus ? 'on' : 'off');
            document.getElementById('ledCard').className = 'sensor-card' + (ledStatus ? ' active' : '');
            
            // Êõ¥Êñ∞‰∫∫ÂëòÊ£ÄÊµã
            const hasPerson = data.person_detected === true;
            document.getElementById('personStatus').textContent = hasPerson ? 'Ê£ÄÊµãÂà∞' : 'Êú™Ê£ÄÊµã';
            document.getElementById('personStatusBadge').textContent = hasPerson ? 'Ê£ÄÊµãÂà∞' : 'Êú™Ê£ÄÊµã';
            document.getElementById('personStatusBadge').className = 'sensor-status ' + (hasPerson ? 'detected' : 'off');
            document.getElementById('personCard').className = 'sensor-card' + (hasPerson ? ' active' : '');
            
            // Êõ¥Êñ∞ÂÖâÁ∫øÂÄº
            const lightValue = data.light || 0;
            document.getElementById('lightValue').textContent = lightValue;
            const lightStatus = lightValue > 3500 ? 'ÊòèÊöó' : 'Êòé‰∫Æ';
            document.getElementById('lightStatus').textContent = lightStatus;
            
            // Êõ¥Êñ∞ÈúáÂä®Ê£ÄÊµã
            const hasVibration = data.vibration === true;
            document.getElementById('vibrationStatus').textContent = hasVibration ? 'Ê£ÄÊµãÂà∞' : 'Ê≠£Â∏∏';
            document.getElementById('vibrationStatusBadge').textContent = hasVibration ? 'Êä•Ë≠¶' : 'Ê≠£Â∏∏';
            document.getElementById('vibrationStatusBadge').className = 'sensor-status ' + (hasVibration ? 'detected' : 'off');
            document.getElementById('vibrationCard').className = 'sensor-card' + (hasVibration ? ' alert' : '');
            
            // Êõ¥Êñ∞È£éÊâáÁä∂ÊÄÅ
            const fanStatus = data.fan_status === 'ON';
            document.getElementById('fanStatus').textContent = fanStatus ? 'ON' : 'OFF';
            document.getElementById('fanStatusBadge').textContent = fanStatus ? 'ON' : 'OFF';
            document.getElementById('fanStatusBadge').className = 'sensor-status ' + (fanStatus ? 'on' : 'off');
            document.getElementById('fanCard').className = 'sensor-card' + (fanStatus ? ' active' : '');
            
            // Êõ¥Êñ∞Ê∏©Â∫¶ÂõæË°®
            if (data.temperature) {
                const now = new Date();
                const timeLabel = now.toLocaleTimeString();
                chart.data.labels.push(timeLabel);
                chart.data.datasets[0].data.push(data.temperature);
                
                if (chart.data.labels.length > 50) {
                    chart.data.labels.shift();
                    chart.data.datasets[0].data.shift();
                }
                
                chart.update('none');
            }
            
            // Êõ¥Êñ∞Ê∂àÊÅØËÆ°Êï∞
            messageCount++;
            document.getElementById('messageCount').textContent = messageCount;
        }

        // ËøûÊé•MQTTÊúçÂä°Âô®
        function connectMQTT() {
            updateStatus('connecting', 'Ê≠£Âú®ËøûÊé•...');
            addLog('Ê≠£Âú®ËøûÊé•Âà∞MQTTÊúçÂä°Âô®...', 'info');
            
            try {
                mqttClient = mqtt.connect(MQTT_CONFIG.host, MQTT_CONFIG.options);
                
                mqttClient.on('connect', () => {
                    updateStatus('connected', 'Â∑≤ËøûÊé•');
                    addLog('ÊàêÂäüËøûÊé•Âà∞MQTTÊúçÂä°Âô®!', 'success');
                    
                    // ËÆ¢ÈòÖ‰º†ÊÑüÂô®Êï∞ÊçÆ‰∏ªÈ¢ò
                    mqttClient.subscribe(MQTT_CONFIG.topicSensor, (err) => {
                        if (err) {
                            addLog(`ËÆ¢ÈòÖ‰º†ÊÑüÂô®‰∏ªÈ¢òÂ§±Ë¥•: ${err.message}`, 'error');
                        } else {
                            addLog(`Â∑≤ËÆ¢ÈòÖ‰º†ÊÑüÂô®‰∏ªÈ¢ò: ${MQTT_CONFIG.topicSensor}`, 'success');
                        }
                    });
                    
                    // ËÆ¢ÈòÖÊä•Ë≠¶‰∏ªÈ¢ò
                    mqttClient.subscribe(MQTT_CONFIG.topicAlert, (err) => {
                        if (err) {
                            addLog(`ËÆ¢ÈòÖÊä•Ë≠¶‰∏ªÈ¢òÂ§±Ë¥•: ${err.message}`, 'error');
                        } else {
                            addLog(`Â∑≤ËÆ¢ÈòÖÊä•Ë≠¶‰∏ªÈ¢ò: ${MQTT_CONFIG.topicAlert}`, 'success');
                        }
                    });
                });
                
                mqttClient.on('message', (topic, message) => {
                    try {
                        const data = JSON.parse(message.toString());
                        
                        if (topic === MQTT_CONFIG.topicSensor) {
                            // ‰º†ÊÑüÂô®Êï∞ÊçÆ
                            addLog(`Êî∂Âà∞‰º†ÊÑüÂô®Êï∞ÊçÆ: Ê∏©Â∫¶${data.temperature}¬∞C`, 'success');
                            updateSensorData(data);
                        } else if (topic === MQTT_CONFIG.topicAlert) {
                            // Êä•Ë≠¶Ê∂àÊÅØ
                            addLog(`Êî∂Âà∞Êä•Ë≠¶Ê∂àÊÅØ: ${data.message}`, 'error');
                            addAlert(data.alert_type || 'Alert', data.message || 'Unknown alert');
                        }
                    } catch (e) {
                        addLog(`Ëß£ÊûêÊ∂àÊÅØÈîôËØØ: ${e.message}`, 'error');
                        addLog(`ÂéüÂßãÊ∂àÊÅØ: ${message.toString()}`, 'info');
                    }
                });
                
                mqttClient.on('error', (error) => {
                    updateStatus('disconnected', 'ËøûÊé•ÈîôËØØ');
                    addLog(`MQTTÈîôËØØ: ${error.message}`, 'error');
                });
                
                mqttClient.on('close', () => {
                    updateStatus('disconnected', 'Â∑≤Êñ≠ÂºÄ');
                    addLog('MQTTËøûÊé•Â∑≤ÂÖ≥Èó≠ÔºåÊ≠£Âú®Â∞ùËØïÈáçËøû...', 'error');
                });
                
                mqttClient.on('offline', () => {
                    updateStatus('disconnected', 'Á¶ªÁ∫ø');
                    addLog('MQTTÂÆ¢Êà∑Á´ØÁ¶ªÁ∫øÔºåÊ≠£Âú®Â∞ùËØïÈáçËøû...', 'error');
                });
                
                mqttClient.on('reconnect', () => {
                    updateStatus('connecting', 'Ê≠£Âú®ÈáçËøû...');
                    addLog('Ê≠£Âú®ÈáçÊñ∞ËøûÊé•MQTTÊúçÂä°Âô®...', 'info');
                });
                
            } catch (error) {
                updateStatus('disconnected', 'ËøûÊé•Â§±Ë¥•');
                addLog(`ËøûÊé•ÈîôËØØ: ${error.message}`, 'error');
            }
        }

        // ËØ∑Ê±ÇÊµèËßàÂô®ÈÄöÁü•ÊùÉÈôê
        if ('Notification' in window && Notification.permission === 'default') {
            Notification.requestPermission();
        }

        // È°µÈù¢Âä†ËΩΩÂÆåÊàêÂêéÂàùÂßãÂåñ
        window.addEventListener('DOMContentLoaded', () => {
            initChart();
            addLog('ÁΩëÈ°µÂ∑≤Âä†ËΩΩÔºåÊ≠£Âú®ÂàùÂßãÂåñ...', 'info');
            connectMQTT();
        });

        // È°µÈù¢ÂÖ≥Èó≠Êó∂Êñ≠ÂºÄËøûÊé•
        window.addEventListener('beforeunload', () => {
            if (mqttClient) {
                mqttClient.end();
            }
        });
    </script>
</body>
